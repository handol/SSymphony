<script>
	$(document).ready(function(){
		if( $(window).width() < 1280 )
			$(".container").width("1280");
		var status = $.getUrlVar('status');
		if( status == "failed" )
			alert("이메일 또는 비밀번호가 일치하지 않습니다.");

		checkEmail();
	})
	function login()
	{
		$('form[name=login-form]').submit();
	}
	function signUp()
	{
		var Options = {
			url: '/page/sign_up',
			type: 'POST',
			dataType: 'json',
			resetForm: false,
			beforeSubmit: function(){},
			success: function(json) {
				if( json.result == "failed" )
				{
					$(".alert-div").html("");
					$("."+json.target+"-alert").html(json.msg);
					$("form[name=sign-up-form] input").css({border:"1px solid rgba(204, 204, 204, 0.47)"});
					$("form[name=sign-up-form] input[name="+json.target+"]").css({border:"3px solid rgba(255, 0, 0, .4)"});
					$("form[name=sign-up-form] input[name="+json.target+"]").focus();
				}
				else if( json.result == "successful" )
					location.href="/page/group_list";
			}
		};
		$('form[name=sign-up-form]').ajaxSubmit(Options);
	}
	function checkEmail()
	{
		$('form[name=sign-up-form] input[name=sign_up_email]').blur(function(){
			var email = $(this).val();
			var $t = $(this);
			$.ajax({
				url: '/page/check_email',
				type: 'POST',
				data: {email:email},
				dataType: 'json',
				success: function(json) {
					if( json.result == "failed" )
					{
						$(".sign_up_email-alert").html(json.msg);
						$t.css({border:"3px solid rgba(255, 0, 0, .4)"});
					}
					else if( json.result == "successful" )
					{
						$(".sign_up_email-alert").html("");
						$t.css({border:"1px solid rgba(204, 204, 204, 0.47)"});
					}
				}
			});
		});
	}
</script>
